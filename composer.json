{
    "name": "ptlis/shell-command",
    "description": "A basic wrapper around execution of shell commands.",
    "license": "MIT",
    "keywords": [ "shell", "exec", "command", "process", "run", "execute" ],
    "type": "library",
    "authors": [
        {
            "name": "brian ridley",
            "email":"ptlis@ptlis.net"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-pcntl": "*",
        "psr/log": "^1.0",
        "react/event-loop": "^0.4.3",
        "react/promise": "^2.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.5.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "ptlis\\ShellCommand\\": "src/",
            "ptlis\\ShellCommand\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
